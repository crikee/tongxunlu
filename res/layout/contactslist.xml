<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_body"
    >
    <RelativeLayout 
    android:id="@+id/contactslist_relative1"
    android:orientation="vertical"
    android:layout_height="42dip"
	android:layout_width="fill_parent"   
	android:background="@drawable/bg_header"
    >
 	<TextView
		android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:text="请选择联系人"
		android:textStyle="bold" android:textSize="22dip"
		android:layout_marginBottom="0dip" android:gravity="center"
		android:layout_gravity="center_vertical" 
		android:textColor="#ffffff" />
	</RelativeLayout>

 	 <ListView
		android:id="@+id/lv_contactslist"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@+id/contactslist_relative1"
		android:layout_marginBottom="42dip"
		android:fastScrollEnabled="true"
		android:focusable="true"
		android:fadingEdge="none"
		android:scrollingCache="false"
	/>
	
	<Button 
		android:id="@+id/btn_contactslist_ok"		
		android:layout_height="42dip"
		android:layout_width="fill_parent"
		android:layout_alignParentBottom="true"
		android:text = "确定"
	/>
</RelativeLayout>
