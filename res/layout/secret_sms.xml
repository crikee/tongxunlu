<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_body"
    >
    <RelativeLayout 
    android:orientation="vertical"
    android:layout_height="42dip"
	android:layout_width="fill_parent"   
	android:background="@drawable/bg_header"
    >
 	<TextView
		android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:text="私密信箱"
		android:textStyle="bold" android:textSize="22dip"
		android:layout_marginBottom="0dip" android:gravity="center"
		android:layout_gravity="center_vertical" 
		android:textColor="#ffffff" />
	<Button 
		android:id="@+id/btn_secertsms_manage"
		android:layout_height="30dip"
		android:layout_width="30dip"
		android:layout_alignParentRight="true"
		android:layout_marginTop="6dip"
		android:layout_marginRight="3dip"
		android:background="@drawable/btn_secertsms_manage"
	/>
	</RelativeLayout>
 	 <ListView
		android:id="@+id/lv_secertsms_sms"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:fastScrollEnabled="true"
		android:focusable="true"
		android:fadingEdge="none"
		android:scrollingCache="false"
	/>
	
</LinearLayout>
