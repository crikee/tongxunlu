<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_body"
    >
    
    <RelativeLayout 
    android:orientation="vertical"
    android:layout_height="wrap_content"
	android:layout_width="fill_parent"   
    >
    
    	<RelativeLayout 
    	android:id="@+id/tv_secretcontacts_relative1"
    	android:orientation="vertical"
    	android:layout_height="42dip"
		android:layout_width="fill_parent"   
		android:background="@drawable/bg_header"
    	>
 			<TextView
 				android:id="@+id/tv_secretcontacts_title"
				android:layout_height="fill_parent"
				android:layout_width="fill_parent" 
				android:text="私密联系人"
				android:textStyle="bold" 
				android:textSize="22dip"
				android:layout_marginBottom="0dip"
				android:gravity="center"
				android:layout_gravity="center_vertical" 
				android:textColor="#ffffff" 
			/>
		</RelativeLayout>
	
		<Button
			android:id="@+id/btn_secretcontacts_add"
			android:layout_height="wrap_content"
			android:layout_width="fill_parent" 
			android:text="添加私密联系人"
			android:textStyle="bold" 
			android:textSize="22dip"
			android:layout_below="@+id/tv_secretcontacts_relative1"
		/>
		
	</RelativeLayout>
	
 	<ListView
		android:id="@+id/lv_contactslist"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:fastScrollEnabled="true"
		android:focusable="true"
		android:fadingEdge="none"
		android:scrollingCache="false"
	/>
	
</LinearLayout>
